<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgOne"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/photo1"
        android:src="@drawable/photo1"

        />

    <TextView
        android:id="@+id/txtOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="My Love,"
        android:textSize="22dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"
        android:textColor="#0f24e2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgOne"/>
    <TextView
        android:id="@+id/txtTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="YOU LIKE A FLOWER"
        android:textColor="#0f24e2"
        android:textSize="22dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="@id/txtOne"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/txtThree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="*Editor's Choice"
        android:textColor="#ff0000"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTwo"/>

    <TextView
        android:id="@+id/txtFour"
        android:layout_width="350dp"
        android:layout_height="72dp"
        android:text="We're all a little weird.And life is a little weird.And when we find someone whose weirdness is compatible with ours,we join up with them and fail into mutually satisfying weirdness and call it love-true love."
        android:textColor="#0f24e2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@id/txtThree"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />
    <TextView
        android:id="@+id/txtFive"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="And in this crazy life. and through these"
        android:textColor="#0f24e2"
        app:layout_constraintTop_toBottomOf="@id/txtFour"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="17dp"
        app:layout_constraintLeft_toLeftOf="parent"

        />
    <TextView
        android:id="@+id/txtSix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 99.9"
        android:textColor="#0f24e2"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/txtFive"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="25dp"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="ORDER NOW"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/txtFive"
        app:layout_constraintRight_toRightOf="parent"
        />





</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>